{% extends 'admin/base.html.twig' %}

{% block title %}extraPage{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('admin/datatable/datatables.min.css') }}" />

{% endblock  %}

{% block body %}

<section id="main-content">
  <section class="wrapper site-min-height">
      <div class="row">
          <div class="container">

            <div class="col-lg-12 mt">
                <div class="row content-panel">
                
                  <div class="panel-heading">
                    <ul class="nav nav-tabs nav-justified">
                        <li class="active">
                            <a data-toggle="tab" href="#niveau1">Texte niveau 1</a>
                        </li>

                        <li>
                            <a data-toggle="tab" href="#illustration" class="contact-map">Illustration Dago</a>
                        </li>


                        <li>
                            <a data-toggle="tab" href="#niveau2">Texte niveau 2</a>
                        </li>
                        
                        <li>
                            <a data-toggle="tab" href="#client">Clients de confiance</a>
                        </li>
                    </ul>
                  </div>


                  <!-- /panel-heading -->
                  <div class="panel-body">
                    <div class="tab-content">
                      
                      <div id="niveau1" class="tab-pane active">
                        <div class="row">
                          
                          <div class="col-lg-10 col-lg-offset-2 detailed ">
                            <h4 class="mb">Gestion interface niveau 1</h4>
                            <div class="form-horizontal">
                            {{ form_start(form) }}
                              <div class="form-group">
                                <label class="col-lg-2 control-label">Titre 1</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form.title1) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">Titre 2</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form.title2) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">Titre 3</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form.title3) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">Titre 4</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form.title4) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">Texte 1</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form.text1) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">Texte 2</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form.text2) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">Texte 3</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form.text3) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">Texte 4</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form.text4) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                  <button class="btn btn-primary" type="submit">Enregistrer</button>
                                </div>
                              </div>
                            {{ form_end(form) }}
                            </div>
                          </div>
                          <!-- /col-lg-8 -->
                          <!-- /col-md-6 -->
                        </div>
                      </div>

                      <div id="illustration" class="tab-pane">
                        <div class="row">
                          
                          <div class="col-lg-10 col-lg-offset-2 detailed ">
                            <h4 class="mb">Présentation de Dagoutsourcing</h4>
                            <div class="form-horizontal">
                            {{ form_start(form2) }}
                              <div class="form-group">
                                <label class="col-lg-2 control-label">Titre</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form2.title) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">résumé</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form2.texte1) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">paragraphe 2</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form2.texte2) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">paragraphe 3</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form2.texte3) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">Image d'illustration</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form2.imageFile) }}
                                </div>
                              </div>
                              {% if illustration %}
                              <div class="form-group">
                                <label class="col-lg-2 control-label"></label>
                                <div class="col-lg-6">
                                  <center><img  style="width:400px;border-radius:10px" 
                                    src="{{ asset('admin/images/produits/'~illustration.image) }}"/></center>
                                </div>
                              </div>
                              {% endif %}
                         
                           
                              <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                  <button class="btn btn-primary" type="submit">Enregistrer</button>
                                </div>
                              </div>
                            {{ form_end(form2) }}
                            </div>
                          </div>
                          <!-- /col-lg-8 -->
                          <!-- /col-md-6 -->

                        </div>
                      </div>

                      <div id="client" class="tab-pane">
                        <div class="row">
                          
                          <div class="col-lg-10 col-lg-offset-2 detailed ">
                            <h4 class="mb">Création de nouveau client</h4>
                            <div class="form-horizontal">
                            {{ form_start(form3) }}
                              <div class="form-group">
                                <label class="col-lg-2 control-label">Nom </label>
                                <div class="col-lg-6">
                                  {{ form_widget(form3.name) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">fonction</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form3.fonction) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">le message</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form3.message) }}
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="col-lg-2 control-label">Image d'illustration</label>
                                <div class="col-lg-6">
                                  {{ form_widget(form3.avatarFile) }}
                                </div>
                              </div>
                         
                           
                              <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                  <button class="btn btn-primary" type="submit">Enregistrer</button>
                                </div>
                              </div>
                            {{ form_end(form3) }}
                            </div>
                          </div>
                          <!-- /col-lg-8 -->
                          <!-- /col-md-6 -->

                          {% if clients %}
                          <div class="row">
                            <div class="col-lg-10 col-lg-offset-1 detailed">
                              <h4 class="mb">Liste des Clients ajoutés</h4>

                              <table id="tab-category" class="display table table-striped table-hover table-bordered">                   
                                <thead style="background-color:#282e36;color:white;">
                                    <tr >
                                        <th class="text-center">avatar</th>
                                        <th class="text-center">nom</th>
                                        <th class="text-center">fonction</th>
                                        <th class="text-center">message</th>
                                        <th class="text-center" width="130px">actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                  {% for client in clients %}
                                      <tr>
                                          <td  class="text-center"><center><img  style="width:40px;height:45px;border-radius:40px;" src="{{ asset('admin/images/avatar/'~client.avatar) }}"/></center></td>
                                          <td  class="text-center">{{ client.name }}</td>
                                          <td  class="text-center">{{ client.fonction }}</td>
                                          <td  class="text-center">{{ client.message }}</td>
                                          <td  class="text-center">

                                            <a class="btn btn-success fa fa-pencil" href="#" data-toggle="modal" data-target="#editModal-1" ></a>
                                            <button type="button" class="btn btn-danger fa fa-trash-o" data-target="#small-1" data-toggle="modal"></button> 
          
                                              <div class="modal fade bd-example-modal-sm" tabindex="-1" id="small-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-sm">
                                                  <form method="post" action="{{ path('delete_client', {'id': client.id}) }}">
                                                    <div class="modal-content">
                                                      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                                                        <div class="modal-body">
                                                          <p>Voulez-vous vraiment supprimer ce client ?</p>
                                                        </div>
                                                      <div class="modal-footer">
                                                        <button type="submit" class="btn btn-danger">oui</button>
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">non</button>
                                                      </div>
                                                    </div>
                                                  </form>
                                                </div>
                                              </div>
                                          </td>
                                      </tr>
                                  {% endfor %}
                                </tbody>
                              </table>

                            </div>
                          </div>
                          {% endif %}

                        </div>
                      </div>



                    </div>
                  </div>

                </div>
            </div>

          </div>
      </div>
  </section>
</section>
{% endblock %}


{% block javascripts %}
<script src="{{ asset('admin/datatable/datatables.min.js') }}"></script>
<script type="text/javascript">

$(document).ready(function(){
  $('#tab').DataTable({

      pagingType: "simple_numbers",
      lengthMenu: [5,8,10,20],
      pageLength: 5

  });

});

</script>
{% endblock %}