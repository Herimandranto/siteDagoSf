{% extends 'base.html.twig' %}

{% block title %}Edit Item{% endblock %}

{% block body %}
    <h1>Edit Item</h1>


    {{ form_start(form) }}
    
    <select id="category"  name="category">
        {% for ctgr in category %}
            <option value="{{ ctgr.id }}"  {% if ctgr.id == item.category.id %} selected {% endif %}   > {{ ctgr.title }} </option>
        {% endfor %}
    </select>
    {{ form_widget(form) }}
        <button class="btn">{{ button_label|default('Edit') }}</button>
    {{ form_end(form) }}


    

    <a href="{{ path('app_item_index') }}">back to list</a>

    {{ include('item/_delete_form.html.twig') }}
{% endblock %}
